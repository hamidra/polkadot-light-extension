{
  "name": "polkadot-lite-extension",
  "packageManager": "pnpm@8.7.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "types:check": "turbo run tsc",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --write",
    "extension:start": "pnpm --filter extension start",
    "shadcn-ui": "pnpm --filter ui shadcn-ui"
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "prettier": "^3.0.3",
    "turbo": "latest",
    "vitest": "^0.34.3"
  }
}
